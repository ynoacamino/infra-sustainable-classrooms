# PostgreSQL Main Database Configuration
POSTGRES_DB=infrastructure_db
POSTGRES_USER=infrastructure_user
POSTGRES_PASSWORD=infrastructure_pass

# Multiple Databases (comma-separated)
# This creates additional databases for different services
POSTGRES_MULTIPLE_DATABASES=auth_db,executor_db

# SSL Configuration
POSTGRES_SSL_MODE=disable

# Connection Pool Settings
POSTGRES_MAX_CONNECTIONS=150
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
